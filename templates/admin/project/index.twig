{% extends 'layout.twig' %}

{% block title %}Administration des projets{% endblock %}

{% block main %}
    <main class="container">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Nom du projet</th>
                    <th scope="col">URL</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for project in projects %}
                    <tr>
                        <td>{{ project.nom }}</td>
                        <td>{{ project.url }}</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <a href="{{ path_for('back_projet_show', {index: project.id}) }}" class="btn btn-secondary">Afficher</a>
                                <a href="/" class="btn btn-secondary">Editer</a>
                                <a href="/" class="btn btn-secondary">Supprimer</a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </main>
{% endblock %}